@model List<TeacherListViewModel>
  @foreach (var item in Model)
  {
  <div class="modal fade" id="AddToCartModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">@item.FirstName @item.LastName</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-4"><img src="~/images/users/@item.Image" alt=""></div>
          <div class="col-8">
                <label class="text-danger">Hakkında:</label>
                <label class="text-black">@item.Description</label>
                <div class="mt-3">
                  <span class="text-black">@($"{item.LessonPrice:C2}")</span>
                </div>
            </div>
          </div>
        </div>
       
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
        <form asp-area="" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.UserName">
          <button type="submit" class="btn btn-primary">Ders Al</button>
        </form>
        
      </div>
    </div>
  </div>
</div>
  }
