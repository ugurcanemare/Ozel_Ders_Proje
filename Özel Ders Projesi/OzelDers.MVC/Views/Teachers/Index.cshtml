@model List<OrderViewModel>

<div class=" container">
<div class="row bg-light rounded-3 w-100" style="margin-top: 90px; margin-left: 1px; margin-bottom: 10px;">
    <div class="col-md-8">
        <h3 class="p-1 mb-2 mt-2">Talep Edilen Dersler</h3>
    </div>
</div>

<div class="accordion accordion-flush mb-3" id="accordionOrders">
    @if (Model.Count > 0)
    {
        @foreach (var orderView in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordionOrder_@orderView.Id" aria-expanded="false" aria-controls="#accordionOrder_@orderView.Id">
                        <div class="row w-100">
                            <div class="col">
                                Sipariş Numarası: @orderView.Id
                            </div>
                            <div class="col">
                                Sipariş Tarihi: @orderView.OrderDate.ToShortDateString()
                            </div>
                            <div class="col">
                                @orderView.FirstName @orderView.LastName
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="accordionOrder_@orderView.Id" class="accordion-collapse collapse" data-bs-parent="#accordionOrders">
                    <div class="accordion-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Öğrenci</th>
                                    <th>Şehir</th>
                                    <th>Telefon Numarası</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td>@orderView.FirstName @orderView.LastName</td>
                                        <td>@orderView.City / @orderView.Town</td>
                                        <td>@orderView.Phone</td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

    }
    else
