@model TeacherViewModel

<div class="w-100" style="margin-top: 84px;">
    <img class="position-absolute" src="~/images/img/lib.jpg">
    <div class="container">
<form class="position-sticky text-white p-2" style="background-color: rgba(128, 128, 128, 0.45);" asp-area="" asp-controller="Account" asp-action="RegisterTeacher" method="post" enctype="multipart/form-data">
     
 <div class="row">
  <div class="col-9">
    <div class="row ">
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
          <div class="col-4 mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
     <div class="row ">
         <div class="col-4 mb-3">
            <label class="form-label" asp-for="School"></label>
            <input class="form-control" asp-for="School">
            <span class="text-danger" asp-validation-for="School"></span>
        </div>
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="Department"></label>
            <input class="form-control" asp-for="Department">
            <span class="text-danger" asp-validation-for="Department"></span>
        </div>
             <div class="col-4 mb-3">
            <label class="form-label" asp-for="DateOfBirth"></label>
            <input type="date" class="form-control" asp-for="DateOfBirth">
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
      
         <div class="col-4 mb-3">
            <label class="form-label" asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber">
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="LessonPrice"></label>
            <input class="form-control" asp-for="LessonPrice">
            <span class="text-danger" asp-validation-for="LessonPrice"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="col-4 mb-3">
            <label class="form-label" asp-for="RePassword"></label>
            <input class="form-control" asp-for="RePassword">
            <span class="text-danger" asp-validation-for="RePassword"></span>
        </div>
          <div class="col-4 mb-3 ">
            <label class="form-label" asp-validation-for="Gender">Cinsiyet</label>
            <div class="d-flex  ">
            <div class="form-check pe-3">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Kadın" checked>
            <label class="form-check-label" for="female">
                Kadın
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Erkek">
            <label class="form-check-label" for="male" >
                Erkek
            </label>
        </div>
            </div>
        <span class="text-danger" asp-validation-for="Gender"></span>
    </div>
    </div>
    <div class="row">
      <div class="col-6 mb-3">
        <label class="form-label" asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
      </div>
       <div class="col-6 mb-3">
          <label class="form-label" asp-for="Image"></label>
            <input type="file" asp-for="Image" class="form-control" accept="image/" multiple />
            <span class="text-danger" asp-validation-for="Image"></span>
        </div>
    </div>
  </div>
   <div class="col-3">
     <h5>Sınıf Seç</h5>
             @foreach (var category in Model.Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedCategories" value="@category.Id" @if(Model.SelectedCategories!=null){
                       @(Model.SelectedCategories.Any(sl=>sl==category.Id) ? "checked" : "")
                       }>
                    <label class="form-check-label">@category.Name</label>
                </div>
            }
        <h5>Ders Seç</h5>
            @foreach (var lesson in Model.Lessons)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedLessons" value="@lesson.Id" @if(Model.SelectedLessons!=null){
                       @(Model.SelectedLessons.Any(sl=>sl==lesson.Id) ? "checked" : "")
                       }>
                    <label class="form-check-label">@lesson.Name</label>
                </div>
            }
            <span asp-validation-for="SelectedLessons" class="text-danger"></span>    
    
  </div>
 </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form> 
</div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}