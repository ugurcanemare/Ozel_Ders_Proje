@model StudentManageViewModel
<form  asp-area="" asp-controller="Account" asp-action="StudentManage" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
<div class="container w-100" style="margin-top: 84px;">
   <div class="row">
        <div class="col-xl-4">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profil Resmi</div>
                <div class="card-body text-center">
                    <img class="img-account-profile mb-2" src="~/images/users/@Model.Img" alt="">
                    <input type="hidden" asp-for="Img">
                    <input type="file" asp-for="Image" class="form-control" accept="image/" multiple />
                    <span class="text-danger" asp-validation-for="Img"></span>                    
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Hesap Bilgieri</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="form-label" asp-for="UserName"></label>
                            <input class="form-control" asp-for="UserName">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label" asp-for="FirstName"></label>
                                <input class="form-control" asp-for="FirstName">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="LastName"></label>
                                <input class="form-control" asp-for="LastName">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">

                            <div class="col-md-6">
                                <label class="form-label" asp-for="City"></label>
                                <input class="form-control" asp-for="City">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" asp-for="Town"></label>
                                <input class="form-control" asp-for="Town">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label" asp-for="School"></label>
                                <input class="form-control" asp-for="School">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sınıfı</label>
                                <select class="form-select" asp-items="@ViewBag.LessonClass" asp-for="LessonClass">
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Okul Seviyesi</label>
                                <select class="form-select" asp-items="@ViewBag.Category" asp-for="Category">
                                </select>
                            </div>
                             <div class="col-6 mb-3 ">
                                <label class="form-label" asp-validation-for="Gender">Cinsiyet</label>
                                <div class="d-flex  ">
                                <div class="form-check pe-3">
                                    <input class="form-check-input" type="radio" asp-for="Gender" value="Kadın" checked>
                                    <label class="form-check-label" for="female">
                                          Kadın
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Gender" value="Erkek">
                                    <label class="form-check-label" for="male" >
                                        Erkek
                                    </label>
                                </div>
                                    </div>
                             </div>
                                <span class="text-danger" asp-validation-for="Gender"></span>
                        </div>
                        <div class="mb-3">
                                <label class="form-label" asp-for="Email"></label>
                                <input class="form-control" asp-for="Email">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="form-label" asp-for="PhoneNumber"></label>
                                <input class="form-control" asp-for="PhoneNumber">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="form-label" asp-for="DateOfBirth"></label>
                                <input type="date" class="form-control" asp-for="DateOfBirth">  
                            </div>
                        </div>
                        <div class="">
                            <label class="form-label" asp-for="Description"></label>
                            <textarea  class="form-control" asp-for="Description"></textarea>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn-primary btn" type="submit">Değişiklikleri Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</form>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
    @await Html.PartialAsync("_LoginStylesPartial");
}