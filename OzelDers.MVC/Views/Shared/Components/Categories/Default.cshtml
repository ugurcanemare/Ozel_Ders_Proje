@model List<CategoryViewModel>

@if (Model.Count() > 0)
{
    <div class="list-group">
            <a asp-area="" asp-controller="Home" asp-action="AllTeachers"  asp-route-categoryurl=""
                class='list-group-item list-group-item-action @(ViewBag.SelectedCategory==null ? "active" : "")'>
                TÃ¼m Kategoriler
            </a>
        @foreach (var category in Model)
        {
            <a  asp-area=""
                asp-controller="Home"
                asp-action="AllTeachers"
                asp-route-categoryurl="@category.Url"
                class='list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.Url ? "active" : "")'>
                @category.Name
            </a>
        }
    </div>
}
else
{
    @await Html.PartialAsync("_NoRecord", "Kategori")
}